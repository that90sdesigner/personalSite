---
import Header from '../components/header.astro';
import Layout from '../layouts/layout.astro';
import Footer from '../components/footer.astro';
import Card from '../components/card.astro';
// import the Image component and the image
import { Image } from 'astro:assets';
import myImage from "../assets/shankar_profile.jpeg"; // Image is 772x1018
---



<Layout title="Shankar UX">
	<main>

		<Header/>
		
		<article class="intro">

			
			

			<Image class="profile-img" src={myImage} alt="shankar's profile image." />


			<h1 class="headline"><div class="slant-text">Hello!</div> Welcome to my corner on the internet</span></h1>

			Hello world Testing

			<!-- About -->
			<p class="about">
				 I am <span class="callout">Shankar</span>, an <a href="https://linkedin.com/in/shankarux">Interaction Designer on Gmail.</a></span> Right now, I am into elevating my typography game and building things on the web. Outside of interface design, I spend my time watching too much TV and <a href="http://yearinbooks.com">reading books</a>. When I am not working or consuming media, I am hanging out with friends.
			</p>

		</article>
		


		<!-- Projects section -->  
		<section class="section-area">
			<!-- Section header -->
			<article>
			<p class="section-title">work</p>
			</article>  
		   <article class="project-card-group"> 
			<!-- Project cards -->
			<Card
				href="https://yearinbooks.com/"
				img="/project-images/project-year-in-books.png"
				title="Year in Books"
				body="A public bookshelf to track what I am reading. Built using Astro with my own two hands!"
			/>

			<Card
		href="https://9to5google.com/2023/09/22/gmail-select-all-android/"
		img="/project-images/project-gmail.png"
		title="Gmail"
		body="Working on productivity focused experiences for consumers."
	/>

			<Card
			href="https://www.google.com/retail/how-google-merchant-center-works/"
			img="/project-images/project-merchant-center.png"
			title="Google Merchant Center"
			body="Designed shipping and return tools in Google Merchant Center, used by over 500,000 online businesses."
		/>

		
		
			</article>   
      
		</section>

		<Footer/>

	</main>





</Layout>

